<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.grp5.mdp.cz3004.ArenaFragment">

    <GridView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/map_grid"
        android:layout_width="500dp"
        android:layout_height="650dp"
        android:columnWidth="30dp"
        android:numColumns="16"
        android:verticalSpacing="5dp"
        android:horizontalSpacing="5dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:paddingTop="15dp"
        />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="510dp"
        android:text="@string/reset"
        android:layout_marginStart="510dp" />

    <Button
        android:id="@+id/voice_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="510dp"
        android:layout_marginTop="60dp"
        android:background="@android:drawable/ic_btn_speak_now"
        android:layout_marginStart="510dp" />

    <ToggleButton
        android:id="@+id/rotation_btn"
        android:layout_marginTop="120dp"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="510dp"
        android:textOn="ROTATE SENSE"
        android:textOff="ROTATE SENSE"
        android:layout_marginStart="510dp" />

    <TextView
        android:id="@+id/x_orientation"
        android:layout_marginTop="180dp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="510dp"
        android:text=""
        android:layout_marginStart="510dp" />
    <TextView
        android:id="@+id/y_orientation"
        android:layout_marginTop="210dp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="510dp"
        android:text=""
        android:layout_marginStart="510dp" />
    <TextView
        android:id="@+id/z_orientation"
        android:layout_marginTop="240dp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="510dp"
        android:text=""
        android:layout_marginStart="510dp" />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/robotStatusText"
            android:layout_marginTop="580dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:text="@string/robot_status"
            android:layout_marginStart="10dp" />
        <TextView
            android:id="@+id/robotStatus"
            android:layout_marginTop="580dp"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="@string/robot_stopped"/>

        <TextView
            android:id="@+id/bluetoothStatusText"
            android:layout_marginTop="580dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/bluetooth_status"/>
        <TextView
            android:id="@+id/bluetoothStatus"
            android:layout_marginTop="580dp"
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:text=""/>

    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="610dp"
            android:layout_marginLeft="50dp"
            android:background="@android:drawable/btn_default">

            <EditText
                android:id="@+id/turnLeftField"
                android:layout_width="50dp"
                android:layout_height="55dp"
                android:textAlignment="center"
                android:inputType="number"
                android:text="90" />

            <Button
                android:id="@+id/turnLeftButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_back_refresh_black_24dp" />

        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="610dp"
            android:background="@android:drawable/btn_default">

        <Button
                android:id="@+id/forwardButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_arrow_upward_black_24dp" />

            <EditText
                android:id="@+id/forwardField"
                android:layout_width="50dp"
                android:layout_height="55dp"
                android:textAlignment="center"
                android:inputType="number"
                android:text="1" />

        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="610dp"
            android:background="@android:drawable/btn_default">

        <Button
                android:id="@+id/turnRightButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_refresh_black_24dp" />

            <EditText
                android:id="@+id/turnRightField"
                android:layout_width="50dp"
                android:layout_height="55dp"
                android:textAlignment="center"
                android:inputType="number"
                android:text="90" />

        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v7.widget.LinearLayoutCompat>

    <Button
        android:id="@+id/startExButton"
        android:layout_marginTop="680dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="40dp"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:text="@string/start_exploration"
        android:layout_marginStart="40dp" />

    <Button
        android:id="@+id/startFpButton"
        android:layout_marginTop="750dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="40dp"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:text="@string/start_fastest_path"
        android:layout_marginStart="40dp" />

    <ToggleButton
        android:id="@+id/startPointButton"
        android:layout_marginTop="680dp"
        android:layout_marginLeft="180dp"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:textOn="@string/set_start_point"
        android:textOff="@string/set_start_point"
        android:layout_marginStart="180dp" />

    <ToggleButton
        android:id="@+id/wayPointButton"
        android:layout_marginTop="750dp"
        android:layout_marginLeft="180dp"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:textOn="@string/set_way_point"
        android:textOff="@string/set_way_point"
        android:layout_marginStart="180dp" />

    <ToggleButton
        android:id="@+id/directionButton"
        android:layout_marginTop="680dp"
        android:layout_marginLeft="300dp"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:textOn="@string/set_start_direction"
        android:textOff="@string/set_start_direction"
        android:layout_marginStart="300dp" />

    <Button
        android:id="@+id/calibrateButton"
        android:layout_marginTop="680dp"
        android:layout_marginLeft="420dp"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="@string/calibrate"
        android:layout_marginStart="420dp" />

    <ToggleButton
        android:id="@+id/updateToggleButton"
        android:layout_marginTop="750dp"
        android:layout_marginLeft="420dp"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:textOn="@string/manual"
        android:textOff="@string/auto"
        android:layout_marginStart="420dp" />

    <Button
        android:id="@+id/returnButton"
        android:layout_marginTop="750dp"
        android:layout_marginLeft="300dp"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="@string/return_robot"
        android:layout_marginStart="300dp" />

    <Button
        android:id="@+id/refreshButton"
        android:layout_marginTop="750dp"
        android:layout_marginLeft="510dp"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:text="@string/refresh_map"
        android:textSize="13sp"
        android:layout_marginStart="510dp" />

</android.support.design.widget.CoordinatorLayout>
