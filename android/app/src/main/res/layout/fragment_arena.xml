<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.grp5.mdp.cz3004.ArenaFragment">

    <!-- TODO: Update blank fragment layout -->
    <GridView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/map_grid"
        android:layout_width="500dp"
        android:layout_height="650dp"
        android:columnWidth="30dp"
        android:numColumns="16"
        android:verticalSpacing="5dp"
        android:horizontalSpacing="5dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:paddingTop="15dp"
        />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/robotStatusText"
            android:layout_marginTop="650dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:text="@string/robot_status"
            android:layout_marginStart="50dp" />
        <TextView
            android:id="@+id/robotStatus"
            android:layout_marginTop="650dp"
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:text=""/>
    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/bluetoothStatusText"
            android:layout_marginTop="650dp"
            android:layout_marginLeft="300dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/bluetooth_status"
            android:layout_marginStart="300dp" />
        <TextView
            android:id="@+id/bluetoothStatus"
            android:layout_marginTop="650dp"
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:text=""/>

    </android.support.v7.widget.LinearLayoutCompat>

    <Button
        android:id="@+id/startExButton"
        android:layout_marginTop="680dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="40dp"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:text="@string/start_exploration"
        android:layout_marginStart="40dp" />

    <Button
        android:id="@+id/startFpButton"
        android:layout_marginTop="750dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="40dp"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:text="@string/start_fastest_path"
        android:layout_marginStart="40dp" />

    <Button
        android:id="@+id/startPointButton"
        android:layout_marginTop="680dp"
        android:layout_marginLeft="180dp"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="@string/set_start_point"
        android:layout_marginStart="180dp" />

    <Button
        android:id="@+id/wayPointButton"
        android:layout_marginTop="750dp"
        android:layout_marginLeft="180dp"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="@string/set_way_point"
        android:layout_marginStart="180dp" />

    <Button
        android:id="@+id/directionButton"
        android:layout_marginTop="680dp"
        android:layout_marginLeft="300dp"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="@string/set_start_direction"
        android:layout_marginStart="300dp" />

    <Button
        android:id="@+id/calibrateButton"
        android:layout_marginTop="680dp"
        android:layout_marginLeft="420dp"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="@string/calibrate"
        android:layout_marginStart="420dp" />

    <ToggleButton
        android:id="@+id/updateToggleButton"
        android:layout_marginTop="750dp"
        android:layout_marginLeft="420dp"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:textOn="@string/manual"
        android:textOff="@string/auto"
        android:layout_marginStart="420dp" />

    <Button
        android:id="@+id/returnButton"
        android:layout_marginTop="750dp"
        android:layout_marginLeft="300dp"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="@string/return_robot"
        android:layout_marginStart="300dp" />

    <Button
        android:id="@+id/refreshButton"
        android:layout_marginTop="750dp"
        android:layout_marginLeft="510dp"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:text="@string/refresh_map"
        android:textSize="13sp"
        android:layout_marginStart="510dp" />

</android.support.design.widget.CoordinatorLayout>
